@{
    ViewBag.Title = "Index";
}

<div>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="@Url.Action("About", "Home")"> <img class="d-block w-100" src="~/Content/img/Inicio.png" alt="First slide"> </a>
            </div>
            <div class="carousel-item">
                <a href="@Url.Action("AWD", "Artworks")"> <img class="d-block w-100" src="~/Content/img/monalisabanner.png" alt="Second slide"> </a>
            </div>
            <div class="carousel-item">
                <a href="@Url.Action("AD", "Artists")"> <img class="d-block w-100" src="~/Content/img/meninasbanner.png" alt="Third slide"> </a>
            </div>
            <div class="carousel-item">
                <a href="@Url.Action("AWD", "Artworks")"> <img class="d-block w-100" src="~/Content/img/nochebanner.png" alt="Fourth slide"> </a>
            </div>
            <div class="carousel-item">
                <a href="@Url.Action("AD", "Artists")">  <img class="d-block w-100" src="~/Content/img/dogbanner.png" alt="Fifth slide"></a>
            </div>
            <div class="carousel-item">
                <a href="@Url.Action("AWD", "Artworks")"> <img class="d-block w-100" src="~/Content/img/cloudbanner.png" alt="Sixth slide"> </a>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="row justify-content-center m-4">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-dark">
                <h5 class="text-warning text-center">Conocenos</h5>
            </div>
            <div class="card-body">
                <p class="text-center">Dale click a la imagen para conocer al equipo de trabajo</p>
                <div class="row justify-content-center m-4">
                    <a href="@Url.Action("Contact", "Home")"><img src="~/Content/img/museo.png" width="250" height="100"></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-dark">
                <h5 class="text-warning text-center">Conoce nuestras obras</h5>
            </div>
            <div class="card-body">
                <p class="text-center">Dale click a la imagen para conocer las obras que tenemos</p>
                <div class="row justify-content-center m-4">
                    <a href="@Url.Action("AWD", "Artworks")"><img src="~/Content/img/obras.jpg" / width="250" height="100"></a>
                </div>
                </div>
            </div>
        </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-dark">
                <h5 class="text-warning text-center">Conoce a los artistas</h5>
            </div>
            <div class="card-body">
                <p class="text-center">Dale click a la imagen para conocer los artistas que contamos</p>
                <div class="row justify-content-center m-4">
                    <a href="@Url.Action("AD", "Artists")"><img src="~/Content/img/artistas.jpg" / width="250" height="100"></a>
                </div>
            </div>
        </div>
    </div>
</div>

