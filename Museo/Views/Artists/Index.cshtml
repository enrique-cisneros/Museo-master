@model IEnumerable<Museo.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Artistas</h2>

<p>
    @Html.ActionLink("Agregar nuevo artista", "Create")
</p>
<table class="table table-dark" id="Artista">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-body">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNac)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

    

</table>

<div class="row justify-content-center m-4">
   <img src="~/Content/img/artistas.jpg" / width="550" height="350">
</div>

@section  Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready( function () {
            $('#Artista').DataTable();
        } );
    </script>
}