@model IEnumerable<Museo.Models.Artwork>

@{
    ViewBag.Title = "Index";
}

<h2>Obras</h2>

<p>
    @Html.ActionLink("Agregar nueva obra", "Create")
</p>

<table class="table table-dark" id="Obra">
    <thead>
        <tr>
            <th>
               Nombre del Artista
            </th>
            <th>
                Nombre de la Obra
            </th>
            <th>
                Tipo de Arte
            </th>
            <th>
                Fecha de creación
            </th>
            <th>
                Descripción
            </th>
            <th>
                URL de Imagen
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody class="text-body">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImgUrl)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
    

</table>

<div class="row justify-content-center m-4">
    <img src="~/Content/img/obras.jpg" / width="550" height="350">
</div>

@section  Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready( function () {
            $('#Obra').DataTable();
        } );
    </script>
}