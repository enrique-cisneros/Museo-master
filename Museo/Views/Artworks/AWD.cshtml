@model IEnumerable<Museo.Models.Artwork>
@{
    ViewBag.Title = "AWD";
}

<hr />
<h2 class="text-center"> <i class="fas fa-palette"></i> OBRAS <i class="fas fa-palette"></i></h2>
<hr />

<div class="row justify-content-center m-3">
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-md-6 mb-4">
            <a href="@Url.Action("Details", "Artworks", new { id = item.Id})">
                <div class="card border-left-primary shadow h-100 py-2 bg-dark">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs text-white text-uppercase mb-1">@item.Fecha</div>
                                <div class="h5 mb-0 font-weight-bold text-white">@item.Nombre</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-palette fa-2x text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>